{
  "name": "@auditswarm/backend",
  "version": "0.1.0",
  "private": true,
  "description": "AuditSwarm Backend Monorepo",
  "license": "MIT",
  "scripts": {
    "build": "echo 'Build handled by root turbo â€” run pnpm build from repo root'",
    "dev": "echo 'Use pnpm dev:api / pnpm dev:workflows from repo root'",
    "dev:api": "pnpm --filter @auditswarm/api dev",
    "dev:indexer": "pnpm --filter @auditswarm/indexer dev",
    "dev:workflows": "pnpm --filter @auditswarm/workflows dev",
    "dev:mcp": "pnpm --filter @auditswarm/mcp dev",
    "lint": "pnpm -r run lint",
    "test": "pnpm -r run test",
    "test:e2e": "pnpm -r run test:e2e",
    "db:generate": "pnpm --filter @auditswarm/database db:generate",
    "db:migrate": "pnpm --filter @auditswarm/database db:migrate",
    "db:push": "pnpm --filter @auditswarm/database db:push",
    "db:studio": "pnpm --filter @auditswarm/database db:studio",
    "clean": "pnpm -r run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "turbo": "^2.3.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@nestjs/schedule": "^6.1.1",
    "binance": "^3.3.2"
  }
}
